<%- include('../views/partials/header.ejs', { user }) %>


<div>
    <h1>Your Favorites</h1>
    <% favorites.forEach(function(song) { %>
        <div class="well">
         <% if (typeof song.songName!=undefined) { %>
          <h2><%= song.songName %></h2>
          <form method="POST" action="/favorites?_method=DELETE">
            <input autocomplete="off" hidden type="text" name="songId" value="<%= song.id %>">
            <button class="btn btn-primary" type="submit">Remove from Favorites</button>
          </form>
       <% } %>
        </div>
      <% }); %>
    </div>




<%- include('../views/partials/footer.ejs') %>